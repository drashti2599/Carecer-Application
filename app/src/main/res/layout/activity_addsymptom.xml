<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back"
        android:scaleType="centerCrop"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#39938c"
    android:text="Add Details"
    android:textSize="25dp"
    android:textColor="@android:color/white"/>
                //Age
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:layout_marginTop="10dp"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No of sexual Partners"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No of Sexual Partners"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
                //first sexual intercourse
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First sexual intercourse age"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/spage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First sexual intercourse age"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
                //no of pregnancies
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No of Pregnancies"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>
                <EditText
                    android:id="@+id/nopreg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No of Pregnancies"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
                //Smoke
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smoking"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/smoke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Yes or No"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>


                //Smoking from how many years
                <TextView
                    android:id="@+id/txt_yearssmoke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smoking from how many years"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>
                //
                <EditText
                    android:id="@+id/smokeyr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Smoking from how many years"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
                //Smoke packs per year
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Smokes pack per year"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/smokepack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="How many smoke packs"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>

                //harmonal contraceptives
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harmonal contraceptive"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/contra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Yes or No"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>
                //Harmonal contraceptive from year
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harmonal Contraceptives year"
                    android:textColor="#39938c"
                    android:ems="20"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/contrayear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="how many years it has been since you use contraceptives"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:ems="5"
                    android:layout_marginTop="10dp"
                    android:textColorHint="#878787"
                    android:textColor="@android:color/white"
                    android:background="#11000000"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/white"/>





                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="20dp"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="#39938c"
                    android:background="@drawable/buttonback"
                    android:id="@+id/button_submit"/>/>


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>